<div class="container">
  <div class="col-md-7 col-lg-6 mx-auto my-5">
    <div class="card card-body">
      <h1 class="text-center my-3">Register</h1>
      <form action="/users/register" method="post" class="row">
        <div class="col-10 mx-auto my-2">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Nick Name">
        </div>
        <div class="col-10 mx-auto my-2">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="col-10 mx-auto my-2">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <div class="col-10 mx-auto my-2">
          <label for="confirmPassword">Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm Password">
        </div>
        <button type="submit" class="btn btn-primary col-4 mx-auto my-3">Register</button>
      </form>
      <p class="mt-3 mx-auto col-10 font-monospace lead">
        Have An Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>